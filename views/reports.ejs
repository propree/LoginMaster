<!DOCTYPE html>
<html>
<head><title>Reports</title></head>
<body>
  <h2 style="text-align: center; font-family: Arial, Helvetica, sans-serif;">Reports</h2>
  <div style="text-align: center; margin-top: 20px;">
  <a href="/dashboard" style="padding: 8px 16px; background: #eee; color: #333; text-decoration: none; border: 1px solid #ccc; border-radius: 4px;">
    Back
  </a>
</div>

<div style="align-items: center;">
  <form action="/reports" method="POST">
    <select name="userId" onchange="this.form.submit()">
      <option value="">Select User</option>
      <% users.forEach(u => { %>
        <option value="<%= u._id %>" <%= selectedUser == u._id ? 'selected' : '' %>><%= u.name %></option>
      <% }) %>
    </select>
  </form>
</div>
  <ul>
    <% reports.forEach(r => { %>
      <li><%= r.date.toDateString() %> - <%= r.details %></li>
    <% }) %>
  </ul>

  <% if(selectedUser){ %>
  <a href="/reports/export/pdf/<%= selectedUser %>">Download PDF</a>
  <a href="/reports/export/excel/<%= selectedUser %>">Download Excel</a>
  <% } %>
</body>
</html>
