<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
  </head>
  <body>
    <h2>Login</h2>
    <% if (error) { %>
    <p style="color: red"><%= error %></p>
    <% } %>
    <form action="/login" method="POST">
      <input type="email" name="email" placeholder="Email" required /><br />
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
      /><br />
      <div><%- captcha %></div>
      <input
        type="text"
        name="captcha"
        placeholder="Enter Captcha"
        required
      /><br />
      <button type="submit">Login</button>
    </form>
  </body>
</html>
